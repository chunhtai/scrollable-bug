                    <Button
                        android:id="@+id/btn_act"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:text=" View" >
                    </Button>
                    <Button
                        android:id="@+id/btn_act"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:text="last View" >
                    </Button>
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/btn_act"
                android:layout_width="300dp"
                android:layout_height="300dp"
